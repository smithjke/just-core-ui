{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "target": "esnext",
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2016.array.include",
      "es2017",
      "es7"
    ],
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": [
    "src/common",
    "src/index.ts",
    "src/components/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

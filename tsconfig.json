{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "esnext",
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2016.array.include",
      "es2017",
      "es7"
    ],
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
